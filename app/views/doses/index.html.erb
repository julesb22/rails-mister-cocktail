<h1> La liste des doses pour <%= @cocktail.name %> </h1>


<ul >
<% @doses.each do |dose|%>
  <li> <%=dose.description%> <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?"} do %>
    <i class="fas fa-trash-alt hello"></i>
    <% end %>
   </li>
<% end %>
</ul>

<div> <i class="fas fa-plus"></i> <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %> </div>

<%= link_to "Back to cocktails" , cocktails_path %>



